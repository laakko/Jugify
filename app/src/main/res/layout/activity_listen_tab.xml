<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/songcard"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Atlas, Rise by Metallica"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:elegantTextHeight="true"
                android:textSize="24sp"
                android:fontFamily="@font/eczar"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSongInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageArtistBig"
                android:layout_width="275dp"
                android:layout_height="275dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/baseline_album_24" />

            <TextView
                android:id="@+id/txtPopularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Popularity" />

            <ProgressBar
                android:id="@+id/popularityBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:scaleY="3"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtValence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Valence" />

            <ProgressBar
                android:id="@+id/valenceBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:scaleY="3"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:id="@+id/txtEnergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Energy" />

            <ProgressBar
                android:id="@+id/energyBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:scaleY="3"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:id="@+id/txtDanceability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Danceability" />

            <ProgressBar
                android:id="@+id/danceBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:scaleY="3"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Musical information (estimations)"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/eczar"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Key: E major"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtBPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Tempo: 120 BPM "
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLoudness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Loudness: -12dB"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/txtTimeSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Signature: 4"
                    android:textSize="18sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Song Lyrics"
                android:textAlignment="center"
                android:fontFamily="@font/eczar"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading.."
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />


        </LinearLayout>
    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomlayout"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Atlas, Rise"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNowArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="0"
            android:textAlignment="center"
            android:text="Metallica"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSongPosition"
                android:text="0:00"
                android:layout_width="20dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="300dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txtSongDuration"
                android:text="5:00"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnPlaylistAdd"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_playlist_add_black_36dp" />

                    <ImageButton
                        android:id="@+id/btnShuffle"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_shuffle_black_36dp"
                        android:text="Shuffle" />

                    <ImageButton
                            android:id="@+id/btnPrev"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="prev"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_skip_previous_black_24dp" />

                    <com.ohoussein.playpause.PlayPauseView
                            android:id="@+id/btnPlay"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:clickable="true"
                            android:foreground="?android:selectableItemBackground"
                            app:fill_color="@color/colorPrimary"
                            app:pause_bg="@color/colorAccent"
                            app:play_bg="@color/colorAccent" />

                    <ImageButton
                            android:id="@+id/btnNext"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="Next"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_skip_next_black_24dp" />




                </LinearLayout>





            </LinearLayout>


        </LinearLayout>



